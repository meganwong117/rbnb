<div id="home" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://wwd.com/wp-content/uploads/2018/09/bkstg-elie-saab-rtw-spring-2019-paris-fashion-week-pfw-044.jpg); margin-top: -15px; margin-bottom: 50px;">
  <div class="banner-header">
    <div class="row m-0">
      <div class="callout col-sm-5" id="titles">
        <div class= "title-text">
          <h1 id= "homepage-title"><strong>DressBnB</strong></h1>
          <p class="description">Got plans? The perfect space to Dress and Impress!</p>
        </div>
      </div>
    </div>
    <div class="row m-0">
      <div class="col-sm-4 pl-5">
        <div class="btn btn-flat mr-3 home-buttons">
          <%= link_to 'Rent a Dress', dresses_path %>
        </div>
        <div class="btn btn-flat home-buttons ml-2" id="button-transparency">
          <%= link_to 'Become a Lender', new_dress_path %>
        </div>
      </div>
    </div>
    <%= form_tag dresses_path, method: :get do %>
      <div class="home-search">
        <%= text_field_tag :query,
        params[:query],
        class: "home-search-form-control",
        placeholder: "Find a dress..."
        %>
      <button name="button" type="submit" class="submit-button">
        <i class="fas fa-search"></i> Search
      </button>
      </div>
    <% end %>
  </div>
</div>

<div class= "container-fluid">
  <div class= "category-cards d-flex justify-content-center mt-8 mb-8">
    <%= link_to dresses_path(event_type: 'Bridal') do %>
      <div class= "home-cards">
        <img src="https://travelbar.com/wp-content/uploads/2017/12/unsctw.jpg" alt="" class= "home-image" style="object-fit: cover;">
        <h2>Bridal Celebration</h2>
        <p>Express and define your special day.</p>
      </div>
    <% end %>

    <%= link_to dresses_path(event_type: 'Wedding') do %>
      <div class= "home-cards">
        <img src="https://cdn.designer-24.com/catalog/product/samr1589286197058_resized_480x.jpg" alt="" class= "home-image" style="object-fit: cover;">
        <h2>Wedding Celebration</h2>
        <p>Unique looks, with a divine feeling.</p>
      </div>
    <% end %>

    <%= link_to dresses_path(event_type: 'Cocktail Party') do %>
      <div class= "home-cards">
        <img src="https://cdn.designer-24.com/catalog/product/soab1589290517825_resized_480x.jpg" alt="" class= "home-image" style="object-fit: cover;">
        <h2>Cocktail Party</h2>
        <p>A style for every story.</p>
      </div>
    <% end %>
  </div>
  <%= link_to dresses_path do %>
    <div class= "button-primary-homepage">
      <h4 class= "d-flex justify-content-center">All Dresses</h4>
    </div>
  <% end %>
</div>
