<div class="container">
  <div class="row">
    <%if @dress.photos.any? %>
      <div class="col left" style="background-image: url('<%= cl_image_path @dress.photos.first.key %>')" >
    <%else %>
      <div class="col left" style="background-image: url('https://images.unsplash.com/photo-1524048269000-9949b9a70cb0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80')" >
    <% end %>
    </div>
    <div class="col right text-center" >
      <div class ="dress-info">
        <div class ="titlesize">
          <h1><%= @dress.name %></h1>
          <p>Size: <%= @dress.size %></p>
          <p>Event: <%= @dress.event_type %></p>
        </div>
        <div class ="paragraph">
          <p><%= @dress.description %></p>
        </div>
        <div class ="dressprice">
          <p>Price: <%= @dress.price%> <%= @dress.currency%></p>
          <p>Retail price: <% @dress.retail_price%> <%= @dress.currency%></p>
        </div>
        <div id= dress-booking-form class="col mt-5 right text-center" >
          <% if @dress.user == current_user %>
        <div class = "links">
          <%= link_to "Remove Dress", dress_path(@dress), method: :delete, data: {confirm: "Are you sure you want to delete this dress?"}, class: "btn btn-flat" %>
          <%= link_to "Edit Dress", edit_dress_path(@dress), class: "btn btn-flat" %>
        </div>
          <%else %>
        <div class ="form">
          <%= simple_form_for([@dress, @booking]) do |f| %>
          <%= f.input :created_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      <% end %>
        </div>
          <%= link_to 'Back to dresses', dresses_path(@dress) %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


