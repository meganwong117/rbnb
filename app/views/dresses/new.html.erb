<div class="new-dress-container">
  <h1> Add a New Dress</h1>
  <div class = "new-dress-form">
    <%= simple_form_for(@dress) do |f| %>
      <%= f.input :name, class: "form-control" %>
      <%= f.input :description, class: "form-control" %>
      <%= f.input :price, class: "form-control" %>
      <%= f.input :currency, collection: Dress::CURRENCIES, class: "form-control" %>
      <%= f.input :size, class: "form-control" %>
      <%= f.input :retail_price, class: "form-control" %>
      <%= f.input :event_type, collection: Dress::EVENT_TYPES, class: "form-control" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, class:"button-primary" %>
    <% end %>
  </div>
</div>
