<h2 style="text-align: center">Your bookings</h2>

<div class="card-booking">
  <div class="card-booking-infos">
    <% @bookings.each do |booking| %>
      <p><%= booking.created_date.strftime("%A, %B %e, %Y") %></p>
      <p><%= booking.end_date.strftime("%A, %B %e, %Y") %></p>
      <p><%= booking.dress.name %></p>
      <p><%= booking.dress.description %></p>
      <%= link_to "Edit Booking", edit_booking_path(booking) %>
      <%= link_to "Cancel Booking", booking, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>

